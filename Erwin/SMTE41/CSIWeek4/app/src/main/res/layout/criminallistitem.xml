<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <!-- TODO: put the user interface for one single item of the criminal list view here -->

    <ImageView
        android:id="@+id/mugshot"
        android:contentDescription="@string/criminal_description"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/name_criminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/total_bounty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
