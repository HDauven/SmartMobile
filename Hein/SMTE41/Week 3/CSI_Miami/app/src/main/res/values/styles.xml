<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActivityLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/main_background_selector</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ButtonBase">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ButtonText</item>
    </style>

    <style name="ButtonBase.Centered">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="LinearLayout.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TableRowLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="TableRowBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@color/TableRowBackground</item>
    </style>

    <style name="TableRowBase.First">
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="TextViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/BlackText</item>
    </style>

    <style name="TextViewBase.Margin">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="TextViewBase.Margin.Details">
        <item name="android:textSize">12sp</item>

    </style>

    <style name="TextViewBase.Margin.Left">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/TableRowText</item>
    </style>

    <style name="TextViewBase.Margin.Right">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/TableRowText</item>
    </style>

    <style name="ListViewBase" parent="android:Widget.Material.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
