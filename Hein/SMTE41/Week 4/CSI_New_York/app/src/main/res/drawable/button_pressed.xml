<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:radius="@dimen/button_curve_base"
        android:topLeftRadius="@dimen/button_no_curve"
        android:topRightRadius="@dimen/button_curve_subtle"
        android:bottomRightRadius="@dimen/button_no_curve"
        android:bottomLeftRadius="@dimen/button_curve_subtle"
        />

    <gradient
        android:angle="90"
        android:startColor="@color/ButtonStart"
        android:centerColor="@color/ButtonCenter"
        android:endColor="@color/ButtonEnd"
        android:type="linear"
        />

    <stroke
        android:width="1dp"
        android:color="@color/colorPrimary" />

    <padding />

</shape>